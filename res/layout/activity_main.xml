<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_search"
        android:layout_width="323dp"
        android:layout_height="53dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/double_col_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Double Display"
        app:layout_constraintEnd_toEndOf="@+id/input_search"
        app:layout_constraintTop_toBottomOf="@+id/input_search" />

    <Button
        android:id="@+id/single_col_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Display"
        app:layout_constraintBottom_toBottomOf="@+id/double_col_view_btn"
        app:layout_constraintStart_toStartOf="@+id/input_search" />

</androidx.constraintlayout.widget.ConstraintLayout>